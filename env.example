# Simili Environment Variables

# Google Gemini API Configuration (SECURE - Server-side only)
GEMINI_API_KEY=

# Gemini Live Configuration
GEMINI_LIVE_PROJECT_ID=your_project_id_here

# WebSocket Configuration
WS_MAX_RETRIES=5
WS_RETRY_DELAY=2000
WS_HEARTBEAT_INTERVAL=30000

# Model Configuration
GEMINI_MODEL_NAME=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=200

# Optional: WebRTC/TURN Server Configuration (for production)
# NEXT_PUBLIC_TURN_SERVER_URL=turn:your-turn-server.com:3478
# NEXT_PUBLIC_TURN_USERNAME=username
# NEXT_PUBLIC_TURN_CREDENTIAL=credential

# Optional: Analytics and Monitoring
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
# NEXT_PUBLIC_ERROR_REPORTING_KEY=your_error_key

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Optional: Educational Platform Integration
# NEXT_PUBLIC_LMS_API_URL=https://your-lms.com/api
# NEXT_PUBLIC_ASSESSMENT_ENDPOINT=https://assessment-api.com
